<!-- app/views/contacts/index.html.erb -->
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Address Book</title>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
  </head>
  <body>
    <h2>Contact List</h2>
    <ul>
      <% @contacts.each do |contact| %>
        <li>
          <%= link_to contact.name, controller: 'contacts', action: 'show', id: contact.id %>
          <%= link_to 'like', controller: 'contacts', action: 'favorite', id: contact.id%>
        </li>
      <% end %>
    </ul>

    <p><%= link_to 'Create New Contact', controller: 'contacts', action: 'new' %></p>  </body>
</html>
