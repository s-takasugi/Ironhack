<!-- app/views/product/new.html.erb -->
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Auction Site | iBay</title>
  </head>
  <body>
    <%= form_for [@user, @product] do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>
      <br>
      <%= f.label :description %>
      <%= f.text_area :description %>
      <br>
      <%= f.label :deadline %>
      <%= f.text_field :deadline %>
      <br>

      <%= f.submit 'Save' %>
      <% end %>
  </body>
</html>
