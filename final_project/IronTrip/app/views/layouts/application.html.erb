        <form class="navbar-form navbar-left" action="show" method="get">
          <div class="form-group">
            <div class="input-group">
              <input type="text" class="form-control" placeholder="Search" name="query" id="search-box">
              <div class="input-group-btn">
                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
              </div>
            </div>
          </div>
        </form>

        <div class="collapse navbar-collapse navbar-right" id="navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li><%= link_to('Search', root_path) %></li>
            <li><%= link_to('Luggage', new_trip_planner_path) %></li>
            <li><%= link_to('Itenerary', itenarary_trip_planners_path) %></li>
            <li><%= link_to('Logout', destroy_user_session_path, method: :delete) %></li>
          </ul>
        </div>
      </div>
    <% end %>

