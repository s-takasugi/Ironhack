<!-- views/operation.erb -->
<!DOCTYPE html>
<html>
  <head>
    <title>Online Calculator</title>
  </head>
  <body>
    <h3>Add</h3>

    <form action="/calculate_add" method="POST">
      <input type="number" name="first_number" placeholder="1st number">
      +
      <input type="number" name="second_number" placeholder="2nd number">

      <button type="submit">Calculate</button>
    </form>

    <h3>Subtract</h3>

    <form action="/calculate_subtract" method="POST">
      <input type="number" name="first_number" placeholder="1st number">
      -
      <input type="number" name="second_number" placeholder="2nd number">

      <button type="submit">Calculate</button>
    </form>

    <h3>Multiply</h3>

    <form action="/calculate_multiply" method="POST">
      <input type="number" name="first_number" placeholder="1st number">
      *
      <input type="number" name="second_number" placeholder="2nd number">

      <button type="submit">Calculate</button>
    </form>

    <h3>Divide</h3>

    <form action="/calculate_divide" method="POST">
      <input type="number" name="first_number" placeholder="1st number">
      /
      <input type="number" name="second_number" placeholder="2nd number">

      <button type="submit">Calculate</button>
    </form>
    
  </body>
</html>
